<Window x:Class="Lesson4_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson4_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="false">
            <ToolBar DockPanel.Dock="Bottom">
                <Button Content="File" ToolTip="Save file" Click="Button_Click"/>
                <Button Content="Save" ToolTip="Save file" Click="Button_Click"/>
                <Button Content="Open" ToolTip="Open file" Click="Button_Click"/>
                <Button Content="Edit" ToolTip="Edit" Click="Button_Click"/>
                <Button Content="Format" ToolTip="Format" Click="Button_Click"/>
            </ToolBar>
        </DockPanel>
    </Grid>
</Window>
