<Window x:Class="task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button Content="File" ToolTip="File Menu"/>
            <Button Content="Edit" ToolTip="Edit Menu"/>
        </ToolBar>
        <ToolBar Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <Button Content="View" ToolTip="View Menu"/>
            <Button Content="Tools" ToolTip="Tools Menu"/>
        </ToolBar>
        <Grid Grid.Row="1">
        </Grid>
        <ToolBar Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBlock Name="timeTextBlock" Text="Current Time:" VerticalAlignment="Center"/>
        </ToolBar>
    </Grid>
</Window>
